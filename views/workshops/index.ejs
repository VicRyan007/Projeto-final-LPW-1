<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <title>Workshops</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/workshops.css">
  <script src="/js/main.js"></script>
</head>

<body>
  <header>
    <div>
      <p id="title">Workshops</p>
      <p id="subtitle">Aproveite e participe !</p>
    </div>
  </header>

  <div>
    <img id="imagem" src="/assets/workshops.jpeg" alt="Workshops">
  </div>

  <form method="get" action="">
    <div id="select">
      <select name="city" id="cidade" onchange="this.form.submit()">
        <option value="" <%=!selectedCity ? 'selected' : '' %>>Todas as cidades</option>
        <% cidades.forEach(city=> { %>
          <option value="<%= city %>" <%=city===selectedCity ? 'selected' : '' %>>
            <%= city %>
          </option>
          <% }) %>
      </select>
    </div>
  </form>


  <div class="cards">
    <% eventos.forEach(evt=> { %>
      <div id="card">
        <p>Cidade: <%= evt.city %>
        </p>
        <p>Evento: <%= evt.title %>
        </p>
        <p>Data:
          <%= evt.date ? new Date(evt.date) .toLocaleDateString('pt-BR',{ day:'2-digit', month:'long' }) : '-' %>
        </p>
        <p>Local: <%= evt.location %>
        </p>
        <p>Descrição: <%= evt.description %>
        </p>
      </div>
      <% }) %>
  </div>

</body>
<footer>
  <a onclick="window.location.href='/'"><button>Voltar</button></a>
</footer>

</html>