<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <title>Shows</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/shows.css">
  <script src="/js/main.js"></script>
</head>

<body>
  <header>
    <div>
      <p id="title">Shows</p>
      <p id="subtitle">Aqui você encontra os shows disponíveis na sua região</p>
    </div>
  </header>

  <div>
    <img id="imagem" src="/assets/Show.jpeg" alt="Shows">
  </div>

  <form method="get" action="">
    <div id="select">
      <select name="city" id="cidade" onchange="this.form.submit()">
        <option value="" <%=!selectedCity ? 'selected' : '' %>>Todas as cidades</option>
        <% cidades.forEach(city=> { %>
          <option value="<%= city %>" <%=city===selectedCity ? 'selected' : '' %>>
            <%= city %>
          </option>
          <% }) %>
      </select>
    </div>
  </form>


  <div class="cards">
    <% eventos.forEach(evt=> { %>
      <div id="card">
        <p>Cidade: <%= evt.city %>
        </p>
        <p>Show: <%= evt.title %>
        </p>
        <p>Hora: <%= evt.time || '-' %>
        </p>
        <p>Local: <%= evt.location %>
        </p>
        <p>Descrição: <%= evt.description %>
        </p>
      </div>
      <% }) %>
  </div>

  <footer>
    <a onclick="window.location.href='/'"><button>Voltar</button></a>
  </footer>
</body>

</html>